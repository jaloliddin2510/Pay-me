<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessLeaf"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/back_sign_up"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_arrow_back_24"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <TextView
            android:id="@+id/text_pk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sms_kodni_kiriting"
            android:layout_below="@id/ll_back"
            android:layout_marginTop="16dp"
            android:textSize="19sp"
            android:textColor="@color/text"/>
        <LinearLayout
            android:id="@+id/text_un"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/text_pk"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tasdiqlash_uchun_998"
                android:textSize="12sp"
                android:textColor="@color/text"/>
            <TextView
                android:id="@+id/tv_sms_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/raqamiga_yubordik"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/text"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/text_un"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sms_1"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    app:strokeWidth="1dp"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/gray_white"
                    android:backgroundTint="@color/white_darkGray">
                    <EditText
                        android:id="@+id/et_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/text"
                        android:hint="0"
                        android:maxLength="1"
                        android:inputType="number"
                        android:background="@android:color/transparent"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sms_2"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    app:strokeWidth="1dp"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/gray_white"
                    android:backgroundTint="@color/white_darkGray">
                    <EditText
                        android:id="@+id/et_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/text"
                        android:hint="0"
                        android:maxLength="1"
                        android:inputType="number"
                        android:background="@android:color/transparent"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sms_3"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    app:strokeWidth="1dp"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/gray_white"
                    android:backgroundTint="@color/white_darkGray">
                    <EditText
                        android:id="@+id/et_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/text"
                        android:hint="0"
                        android:maxLength="1"
                        android:inputType="number"
                        android:background="@android:color/transparent"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sms_4"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    app:strokeWidth="1dp"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/gray_white"
                    android:backgroundTint="@color/white_darkGray">
                    <EditText
                        android:id="@+id/et_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/text"
                        android:hint="0"
                        android:maxLength="1"
                        android:inputType="number"
                        android:background="@android:color/transparent"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sms_5"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    app:strokeWidth="1dp"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/gray_white"
                    android:backgroundTint="@color/white_darkGray">
                    <EditText
                        android:id="@+id/et_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/text"
                        android:hint="0"
                        android:maxLength="1"
                        android:inputType="number"
                        android:background="@android:color/transparent"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sms_6"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    app:strokeWidth="1dp"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/gray_white"
                    android:backgroundTint="@color/white_darkGray">
                    <EditText
                        android:id="@+id/et_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/text"
                        android:hint="0"
                        android:maxLength="1"
                        android:inputType="number"
                        android:background="@android:color/transparent"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_below="@id/ll_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">
            <TextView
                android:id="@+id/sms_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/gray_white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/dan_so_ng_kodni_qayta_yuborish"
                android:textColor="@color/gray_white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:id="@+id/recreate_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sms_kodni_qayta_yuborish"
            android:layout_below="@id/ll_time"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/payMeColor"
            android:text="@string/davom_ettirish"
            android:textColor="@color/white"
            app:cornerRadius="10dp"
            tools:ignore="TextContrastCheck,VisualLintButtonSize" />
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            android:progressBackgroundTint="@color/payMeColor"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>